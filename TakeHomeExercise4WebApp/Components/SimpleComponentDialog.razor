<BlazorDialog.DialogHeader ShowClose="true">
    <h4>@Input</h4>
</BlazorDialog.DialogHeader>
<BlazorDialog.DialogBody>
    <p>@BodyText</p>
</BlazorDialog.DialogBody>
<BlazorDialog.DialogFooter>
    <button type="button" class="btn btn-primary" @onclick="@(()=> Dialog.Hide("Ok"))">Ok</button>
    <button type="button" class="btn btn-secondary" @onclick="@(()=> Dialog.Hide("Cancel"))">Cancel</button>
</BlazorDialog.DialogFooter>

@code {
    [CascadingParameter(Name = "ParentDialog")] BlazorDialog.Dialog Dialog { get; set; }
    [Parameter] public string Input { get; set; }
    [Parameter] public string BodyText { get; set; }
}
